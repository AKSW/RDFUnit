      rut:appliesTo rut:Schema ;
      rut:generated rut:ManuallyGenerated ;
      rut:references <http://lemon-model.net/lemon#LexicalSense>;
      rut:source <http://lemon-model.net/lemon#> ;
      rut:testCaseLogLevel rlog:ERROR ;
      rut:sparqlWhere """ {
                           		{?resource rdf:type <http://lemon-model.net/lemon#LexicalSense> .
                           			FILTER (NOT EXISTS {?resource <http://lemon-model.net/lemon#subsense> ?sub .})
                                    FILTER (NOT EXISTS {?resource <http://lemon-model.net/lemon#reference> ?ref .})
                           		}UNION{
								 ?resource rdf:type <http://lemon-model.net/lemon#LexicalSense> .
