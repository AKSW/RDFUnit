    rut:generated rut:ManuallyGenerated ;
    rut:references nif:anchorOf , nif:beginIndex, nif:endIndex ;
    rut:source <http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#> ;
    rut:testCaseLogLevel rlog:ERROR ;
