<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>databugger-parent</artifactId>
    <groupId>org.aksw.databugger</groupId>
    <version>0.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>databugger-core</artifactId>
  <name>Databugger - Core</name>
  <profiles>
    <profile>
      <id>debpackage</id>
      <build>
        <finalName>databugger-core</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.1</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <mainClass>org.aksw.databugger.Databugger</mainClass>
                    </transformer>
                  </transformers>
                  <filters>
                    <filter>
                      <artifact>*:*</artifact>
                      <excludes>
                        <exclude>META-INF/*.SF</exclude>
                        <exclude>META-INF/*.DSA</exclude>
                        <exclude>META-INF/*.RSA</exclude>
                      </excludes>
                    </filter>
                  </filters>
                </configuration>
              </execution>
            </executions>
            <configuration />
          </plugin>
          <plugin>
            <groupId>org.vafer</groupId>
            <artifactId>jdeb</artifactId>
            <version>1.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>jdeb</goal>
                </goals>
                <configuration>
                  <deb>/home/jim/work/code/java/Databugger/databugger-core/target/databugger-core-0.1.deb</deb>
                  <controlDir>/home/jim/work/code/java/Databugger/databugger-core/debian</controlDir>
                  <dataSet>
                    <data>
                      <src>/home/jim/work/code/java/Databugger/databugger-core/target/databugger-core.jar</src>
                      <type>file</type>
                      <mapper>
                        <type>perm</type>
                        <prefix>/etc/share/java/databugger</prefix>
                      </mapper>
                    </data>
                    <data>
                      <src>/home/jim/work/code/java/Databugger/databugger-core/debian/databugger</src>
                      <type>file</type>
                      <mapper>
                        <type>perm</type>
                        <filemode>777</filemode>
                        <prefix>/usr/bin</prefix>
                      </mapper>
                    </data>
                    <data>
                      <src>/home/jim/work/code/java/Databugger/databugger-core/../data</src>
                      <type>directory</type>
                      <includes>*</includes>
                      <mapper>
                        <type>perm</type>
                        <filemode>777</filemode>
                        <prefix>/etc/share/java/databugger/data</prefix>
                      </mapper>
                    </data>
                  </dataSet>
                  <changesIn>/home/jim/work/code/java/Databugger/databugger-core/debian/CHANGES.txt</changesIn>
                  <changesSave>/home/jim/work/code/java/Databugger/databugger-core/debian/CHANGES.txt</changesSave>
                  <changesOut>/home/jim/work/code/java/Databugger/databugger-core/target/databugger-core.changes</changesOut>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>

